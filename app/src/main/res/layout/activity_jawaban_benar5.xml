<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgpolos"
    tools:context=".jawaban_benar5">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="320dp"
        android:layout_height="580dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/centang"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/img" />

                <TextView
                    android:id="@+id/progress"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="5/5"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Score : 100"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/questionNumber"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/linear1"
                android:background="@drawable/nomor"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/jenissoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/questionNumber"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Nukleus"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@id/Validasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jenissoal"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:text="Jawaban Anda Benar \n Score +100"
                android:textColor="#2B7A0B"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/questionTextView"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Validasi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Apa yang mengatur sintesis protein dalam sel?"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Penjelasan"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/questionTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:text="Nukleus mengatur sintesis protein dalam sel. Nukleus, yang mengandung DNA, bertanggung jawab atas transkripsi DNA menjadi mRNA. mRNA kemudian mengarah ke ribosom di sitoplasma, di mana proses translasi terjadi untuk menghasilkan protein. Nukleus berperan penting dalam mengatur ekspresi gen dan mengendalikan produksi protein dalam sel. \n \n Protein Secara keseluruhan, nukleus berperan sebagai pengatur utama dalam sintesis protein dalam sel. Melalui proses transkripsi dan regulasi ekspresi gen, nukleus mengontrol produksi mRNA yang membawa informasi genetik untuk sintesis protein. Dengan demikian, nukleus memiliki peran sentral dalam pengaturan dan koordinasi sintesis protein, yang penting untuk fungsi dan aktivitas sel yang optimal."
                android:textColor="@color/black"
                android:textSize="12sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/blom"
        android:elevation="2dp" />

    <Button
        android:id="@+id/lanjut5"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/ijo"
        android:layout_below="@id/card1"
        android:text="lanjut"
        android:onClick="onButtonClick"/>

</RelativeLayout>