<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgpolos"
    tools:context=".jawaban_benar">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="320dp"
        android:layout_height="580dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/centang"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="1/1"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Score : 100"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:id="@+id/iji"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/linear1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/satu" />

            <TextView
                android:id="@+id/sel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iji"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Struktur Sel"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@id/jawabanbenar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sel1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Jawaban Anda Benar"
                android:textColor="#2B7A0B"
                android:textSize="20sp" />

            <TextView
                android:id="@id/jawabanbenar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jawabanbenar"
                android:layout_centerHorizontal="true"
                android:text="Score +100"
                android:textColor="#2B7A0B"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/soal"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_below="@+id/jawabanbenar2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/pertanyaan" />

            <TextView
                android:id="@+id/penjelasan"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/soal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:text="Pada gambar tersebut membran sel yang terdapat pada bagian 1, 3, dan 5 adalah protein perifer, fosfolipid, protein integral sedangkan pada gambar 2 dan 4 glikolipid dan perifer"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/penjelasan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:text="Protein Perifer: Protein perifer adalah protein yang terletak di luar lapisan lipid dalam membran sel. Fosfolipid: Fosfolipid adalah jenis lipid yang merupakan komponen utama membran sel. Fosfolipid memiliki struktur yang terdiri dari dua asam lemak hidrofobik (non-polar) yang menyatu dengan satu gugus fosfat hidrofilik (polar). Protein Integral: Protein integral adalah protein yang menembus ke dalam lapisan lipid membran sel."
                android:textColor="@color/black"
                android:textSize="13sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/blom"
        android:elevation="2dp" />

    <Button
        android:id="@+id/lanjut"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/ijo"
        android:layout_below="@id/card1"
        android:text="lanjut"/>

</RelativeLayout>